<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
	android:layout_marginLeft="@dimen/SecondScreenPadding"
	android:layout_marginRight="@dimen/SecondScreenPadding"
	android:layout_marginBottom="@dimen/SecondScreenPadding"
	android:layout_marginTop="@dimen/SecondScreenPadding"
	android:background="@color/Blue"
    tools:context=".Clicktestactivity" >

    <fragment
        android:id="@+id/spinners_fragment"
        android:name="com.example.pager.SpinnersFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
         />

    <fragment
        android:id="@+id/categories_fragment"
        android:name="com.example.pager.CategoryButtonsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5" 
     />

    <fragment
        android:id="@+id/package_items_fragment"
        android:name="com.example.pager.PackageItemsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
   

</LinearLayout>